{% extends "src/base.njk" %}

{% block head %}
<title>Parlamento Abierto</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="bg-color">
			<div class="container">
				<div class="row d-flex">
					<div class="col-lg-6 col-md-12 col-sm-12 d-flex align-self-center flex-column  mb-0 my-lg-4">

						<h2 class="text-slider" style="font-size:40px!important">Iniciativas</h2>
						<h2 class="text-slider2">
                            Sumérgete en nuestros esfuerzos actuales y descubre cómo puedes ser parte del cambio hacia un futuro digital más inclusivo y accesible.
						</h2>

					</div>

                    <div class="col-lg-6 col-md-12 col-sm-12 d-flex justify-content-end align-self-center flex-column mb-0 my-lg-4">

						<img src="/assets/img/slider/iniciativas.png">

					</div>
				</div>
			</div>
        </section>

        <!-- Iniciativas
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">
                    
                  <div class="col-lg-12">
                    {% for iniciativa in collections.iniciativas %}
                    <div class="iniciativas my-4">
                        <img style="width: 30%;" src="{{iniciativa.data.image}}">
                        <div class="px-6">
                            <h2 class="text-titles">{{iniciativa.data.title}}</h2>
                            <p>{{iniciativa.data.description}}</p>
                            <a class="btn" href="{{iniciativa.url}}">Leer Más <i class="fa-solid fa-right-long"></i></a>
                        </div>
                    </div>
                    {% endfor %}
                  </div>

                </div>
            </div>
        </section>

{% endblock %}