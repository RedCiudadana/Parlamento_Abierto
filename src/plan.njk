permalink: "plan2025/index.html"
---

{% extends "src/base.njk" %}

{% block head %}
<title>Plan 2025 | Parlamento Abierto</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<div class="slider-element">
            <img src="/assets/img/parlamento/03_SLIDER/CL-37.png" alt="Slider">
            <div class="overlay-content">
              <h1>Plan 2025</h1>
              <p>Visión de Futuro: Un Congreso Moderno y Abierto</p>
            </div>
        </div>

        <!-- que es
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">

                    <div class="col-lg-6 mb-4 d-flex align-items-center">


                        <p>
                            El Plan 2025 establece los objetivos clave para consolidar el Parlamento Abierto en Guatemala. Entre ellos, destaca la implementación de plataformas digitales avanzadas, la institucionalización de procesos de rendición de cuentas y el fortalecimiento de la participación ciudadana como base de la democracia legislativa.
                            <br><br>
                        </p>

                    </div>

                    {% for video in collections.videos | limit(1) | reverse %}
                    
                    <div class="col-lg-6 text-center">
                        <iframe width="560" height="315" src="{{video.data.link | safe}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    </div>

                    {% endfor %}




                </div>
            </div>
        </section>

        <!-- Lineas de Accion
        ============================================= -->

        <section class="px-2" style="background-color: #03334f;">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-4 my-4 text-center">
                        <a href="/#"><div class="cuadro_plataformas2">
                            <div class="d-flex align-items-center">
                                <img src="/assets/img/parlamento/01_ICONOS/CL-16.png">
                                <h2 class="text-titles hover_white">Objetivos Generales y Específicos</h2>
                            </div>
                        </div></a>
                    </div>
                    <div class="col-lg-4 my-4 text-center">
                        <a href="/#"><div class="cuadro_plataformas2">
                            <div class="d-flex align-items-center">
                                <img src="/assets/img/parlamento/01_ICONOS/CL-14.png">
                                <h2 class="text-titles hover_white">Actividades</h2>
                            </div>
                        </div></a>
                    </div>
                    <div class="col-lg-4 my-4 text-center">
                        <a href="/#"><div class="cuadro_plataformas2">
                            <div class="d-flex align-items-center">
                                <img src="/assets/img/parlamento/01_ICONOS/CL-15.png">
                                <h2 class="text-titles hover_white">Indicadores</h2>
                            </div>
                        </div></a>
                    </div>

                </div>
            </div>
        </section>

        <!-- avances
        ============================================= -->

        <section class="px-2" style="background-color: #e8f0f9;">
            <div class="container clearfix ">
                <div class="row py-6">
                    
                    <div class="col-lg-12 mb-4 text-center">
                        <h2 class="text-titles mb-2">Avances del Plan</h2>
                    </div>

                    {% for recurso in collections.recursos | limit(1) %}
                    <div class="col-lg-12 mb-4">
                        <div class="cuadro_recurso2">
                            <img src="/assets/img/parlamento/01_ICONOS/CL.png">
                            <div class="cuadro_recurso_content">
                                <h1>{{recurso.data.title}}</h1>
                                <p>{{recurso.data.description}}</p>
                                <a class="btn" href="{{recurso.url}}">Descargar</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    {% for recurso in collections.recursos %}
                    <div class="col-lg-6 mb-4">
                        <div class="cuadro_recurso">
                            <img src="/assets/img/parlamento/01_ICONOS/CL.png">
                            <div class="cuadro_recurso_content">
                                <h1>{{recurso.data.title}}</h1>
                                <p>{{recurso.data.description}}</p>
                                <a class="btn" href="{{recurso.url}}">Descargar</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
        </section>

{% endblock %}