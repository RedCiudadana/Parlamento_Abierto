{% extends "src/base.njk" %}

{% block head %}
<title>Parlamento Abierto</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="bg-color">
			<div class="container">
				<div class="row d-flex">
					<div class="col-lg-6 col-md-12 col-sm-12 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">

						<h2 class="text-slider" style="font-size:40px!important">Recursos</h2>
						<h2 class="text-slider2">
                            Bienvenido a la sección de Recursos de Red Ciudadana, tu centro de aprendizaje y herramientas para la transformación digital
						</h2>

					</div>

                    <div class="col-lg-6 col-md-12 col-sm-12 d-flex justify-content-end align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">

						<img src="/assets/img/slider/recursos.png">

					</div>
				</div>
			</div>
        </section>

        <!-- Iniciativas
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12">
                        {% for recurso in collections.recursos %}
                        <div class="iniciativas my-4">
                            <img style="width: 30%;" src="{{recurso.data.image}}">
                            <div class="px-6">
                                <h2 class="text-titles">{{recurso.data.title}}</h2>
                                <p>{{recurso.data.description}}</p>
                                <a class="btn" href="{{recurso.data.recurso}}" target="_blank">Descargar <i class="fa-solid fa-right-long"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </section>

{% endblock %}